<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar Contraseña"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de Usuario"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvPreguntaRecuperacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta de recuperación"
            android:textColor="#333333"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:inputType="text"
            android:visibility="gone"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnBuscarPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:backgroundTint="#8273EF"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnValidarRespuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validar Respuesta"
            android:backgroundTint="#8273EF"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>